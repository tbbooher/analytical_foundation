= form_for @problem do |f|
  -if @problem.errors.any?
    #error_explanation
      %h2= "#{pluralize(@problem.errors.count, "error")} prohibited this problem from being saved:"
      %ul
        - @problem.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :submitter_id
    = f.number_field :submitter_id
  .field
    = f.label :difficulty
    = f.text_field :difficulty
  .actions
    = f.submit 'Save'
